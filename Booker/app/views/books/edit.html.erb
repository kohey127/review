<div>
  <h2>Editing Book</h2>
  <%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
      <div class="error_explanation">
        <div class="error_titile">
          <h2><%= @book.errors.count%> errors prohibited this obj from being saved:</h2>
        </div>
        <div class="error_list">
          <% @book.errors.full_messages.each do |message| %>
            <ul>
              <li><%= message %></li>
            <ul>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="title_label">
      <%= f.label "title" %><br>
    </div>
    <div class="title_area">
      <%= f.text_field :title %><br>
    </div>
    <div class="body_label">
      <%= f.label "Body" %><br>
    </div>
    <div class="body_area">
      <%= f.text_area :body %><br>
    </div>
    <div class="submit">
      <%= f.submit "Update Book", disable_with: 'UpdateBooking...' %>
    </div>
  <% end %>
</div>
<%= link_to  "Show", book_path %>
<%= link_to  "Back", books_path %>